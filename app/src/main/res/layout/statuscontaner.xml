<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#efefef">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d6d6d6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/imageView5"
            android:layout_weight="2"
            android:src="@drawable/patientscript"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10/10/1989"
            android:id="@+id/sdate"
            android:padding="10dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3:05:00"
            android:id="@+id/stime"
            android:layout_gravity="right"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingTop="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Blood Pressure      : "
            android:id="@+id/blood_pressure"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120/100"
            android:id="@+id/bloodp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:textSize="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Diabetes Rate       : "
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120/100"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/DiabetsR"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weight                     :"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120/100"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/weight"
            android:textSize="11dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temperature        :"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="120/100"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/Temp"
            android:textSize="11dp" />
    </LinearLayout>





    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Required Analyzes"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/customtextfilde"
            android:id="@+id/reqana" />

    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Required X-Ray "
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/customtextfilde"
            android:id="@+id/xrayReq" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Prescribed Treatment"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/customtextfilde"
            android:id="@+id/drug" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Doctor Notes"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/customtextfilde"
            android:id="@+id/doctorNotes" />

    </LinearLayout>







    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Next Visit   : "
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nextvisit"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="10/5/2005"
            android:gravity="left"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>